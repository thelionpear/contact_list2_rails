<h1>New Contact</h1>
<%= form_for @contact do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.select (:age, options_for_select([18..100])) %>

    <%= f.label :hair_color %>
    <%= f.text_field :color %>

    <%= f.label :eye_color %>
    <%= f.text_field :eye_color %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :alive %>
    <%= f.select (:alive, options_for_select["true", true],["false", false])  %> 

    <%= f.submit %>
<% end %> 

